{
  "name": "FEDS",
  "base": {
    "app": "app",
    "tmp": "./.tmp",
    "build": "dist"
  },
  "html": {
    "files": "app/*.{html,jade}",
    "filters": {
      "css": "*.css",
      "js": "*.js"
    }
  },
  "views": {
    "base": "app/views",
    "files": "app/views/**/*.{html,jade}",
    "templateCache": "app/scripts/templates/*.js",
    "build": "app/scripts/templates"
  },
  "scripts": {
    "base": "app/scripts",
    "tmp": ".tmp/scripts",
    "build": "dist/scripts",
    "files": "app/scripts/**/*.{js,coffee}",
    "app": "./app/scripts/app.js"
  },
  "styles": {
    "base": "app/styles",
    "tmp": ".tmp/styles",
    "build": "dist/styles",
    "files": "app/styles/*.{css,scss,sass}",
    "AUTOPREFIXER_BROWSERS": [
      "ie >= 10",
      "ie_mob >= 10",
      "ff >= 30",
      "chrome >= 34",
      "safari >= 7",
      "opera >= 23",
      "ios >= 7",
      "android >= 4.4",
      "bb >= 10"
    ],
    "SassOptions":[
      {"sourcemap": "true", "style": "expanded", "precision": "10"}
    ]
  },
  "assets": {
    "base": "app/assets/",
    "files": "app/assets/**/*"
  },
  "images": {
    "base": "app/assets/images",
    "build": "dist/assets/images",
    "files": "app/assets/images/**/*.{png,jpg,gif}"
  },
  "fonts": {
    "base": "app/assets/fonts",
    "build": "dist/assets/fonts",
    "files": "app/assets/fonts/**/*.{eot,ttf,woff,svg}"
  }
}
