{
  "name": "FEDS",
  "base": {
    "app": "app",
    "tmp": "./.tmp",
    "build": "dist"
  },
  "html": {
    "files": "app/*.{html,jade}"
  },
  "views": {
    "base": "app/views",
    "files": "app/views/**/*.{html,jade}",
    "build": "app/scripts/.templates"
  },
  "templateCache": {
    "base": "app/scripts/.templates",
    "files": "app/scripts/.templates/*.js"
  },
  "scripts": {
    "base": "app/scripts",
    "tmp": ".tmp/scripts",
    "build": "dist/scripts",
    "files": "app/scripts/**/*.{js,coffee}",
    "browserify": "./app/scripts/main.js"
  },
  "styles": {
    "base": "app/styles",
    "tmp": ".tmp/styles",
    "build": "dist/styles",
    "files": "app/styles/*.{css,scss,sass}",
    "AUTOPREFIXER_BROWSERS": [
      "ie >= 10",
      "ie_mob >= 10",
      "ff >= 30",
      "chrome >= 34",
      "safari >= 7",
      "opera >= 23",
      "ios >= 7",
      "android >= 4.4",
      "bb >= 10"
    ],
    "SassOptions":[
      {"sourcemap": "true", "style": "expanded", "precision": "10"}
    ]
  },
  "images": {
    "base": "app/images",
    "build": "dist/images",
    "files": "app/images/**/*.{png,jpg,gif}"
  },
  "fonts": {
    "base": "app/fonts",
    "build": "dist/fonts",
    "files": "app/fonts/**/*.{eot,ttf,woff,svg}"
  }
}
